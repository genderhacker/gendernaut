{
  "name": "gendernaut",
  "version": "1.0.0",
  "description": "A plugin to visualize archives in Wordpress.",
  "main": "gendernaut.php",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css": "sass public/css/sass/gendernaut-public.scss public/css/gendernaut-public.css && postcss public/css/gendernaut-public.css --use autoprefixer -d public/css/",
    "js": "rollup -c",
    "build": "npm run css && npm run js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/marc_pf/gendernaut.git"
  },
  "keywords": [
    "Wordpress",
    "Archive",
    "Gender",
    "Open",
    "Source"
  ],
  "author": "Taller Estampa",
  "license": "ISC",
  "homepage": "https://bitbucket.org/marc_pf/gendernaut#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "imagesloaded": "^4.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "isotope-layout": "^3.0.6",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^5.0.0",
    "sass": "^1.21.0"
  }
